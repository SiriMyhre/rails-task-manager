<div class="form">
  <%= form_for(@task) do |t| %>
    <div class="form-group">
      <%= t.label :title %>
      <%= t.text_field :title %>
    </div>
    <div class="form-group">
      <%= t.label :details %>
      <%= t.text_field :details %>
    </div>
    <%= t.submit class: 'btn btn-primary'%>
  <% end %>
</div>

<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>


