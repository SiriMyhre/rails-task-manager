<h1> <%=@task.title%> </h1>

<div class="details">
  <%=@task.details%>
</div>


<% if @task.completed == true %>
    <p><%=check_box_tag("", "", @task.completed, disabled: true)%> This task is completed</p>
  <% else %>
    <p><%=check_box_tag("", "", @task.completed, disabled: true)%> This task is not completed yet</p>
<% end %>

<%= link_to edit_task_path(@task.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this task
<% end %>

<%= link_to "Back to list", tasks_path%>

